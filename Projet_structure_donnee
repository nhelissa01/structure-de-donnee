   	  void time(){
 	SYSTEMTIME t;
 	GetSystemTime(&t);
 	printf("Date & Time       :  ");
 	printf("%d-%d-%d %d:%d:%d\n\n",t.wDay,t.wMonth,t.wYear,t.wHour,t.wMinute,t.wSecond);
 }
