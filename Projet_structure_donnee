    hwnd = CreateWindowEx (0, szClassName,_T("Ma premiere fenetre winAPI !"),
           WS_OVERLAPPEDWINDOW, CW_USEDEFAULT, CW_USEDEFAULT, 5500,1000,HWND_DESKTOP,NULL, hThisInstance,NULL);
     
